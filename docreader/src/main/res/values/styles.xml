<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>
    <style name="title_background_drawable_vertical">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="title_background_drawable_horizontal">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="title_background_vertical" parent="AppTheme">
        <item name="android:windowTitleBackgroundStyle">@style/title_background_drawable_vertical
        </item>
    </style>

    <style name="title_background_horizontal" parent="AppTheme">
        <item name="android:windowTitleBackgroundStyle">
            @style/title_background_drawable_horizontal
        </item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

</resources>